<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h3>Reviews</h3>
<ul><% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <% end %>
</ul>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%></p>

<p><%= link_to "Back to the list", restaurants_path(@restaurant) %></p>
